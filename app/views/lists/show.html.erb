<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@list.photo.key, height: 300, crop: :fill) %>);">
    <div class="container">
      <h1><strong><%= @list.name %></strong></h1>
    </div>
  </div>
  <% else %>
  <div class="banner bg-dark">
    <div class="container">
      <h1><strong><%= @list.name %></strong></h1>
    </div>
  </div>
<% end %>

<div class="container-fluid">
  <div class="row">
      <h2 class="mt-3">Movies bookmarked</h2>
    <div class="d-flex col-8">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex justify-content-center">
        <div class="card custom-bg-card-show" style='background-image: url("<%= bookmark.movie.poster_url %>")'>
          <div class="card-body d-flex justify-content-center align-items-center">
            <%= bookmark.movie.title %>
          </div>
        </div>
    </div>
  <% end %>
    </div>
    <div class="col-4 d-inline">
      <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-success text-light" %>

      <%= link_to "Back", root_path, class: "btn btn-success text-light" %>
    </div>
  </div>
</div>
